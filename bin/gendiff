#!/usr/bin/env php
<?php
require_once __DIR__ . '/../vendor/autoload.php';

use function Differ\genDiff;

function filesExists(...$files)
{
    array_reduce(
            $files,
            function ($acc, $filePath) {
                return file_exists($filePath)
                    ? $acc
                    : $acc. "File $filePath is not exists!";
            },
            ''
    );
    $exists = array_filter($files, fn ($pathToFile) => file_exists($pathToFile));
    return count($exists) === count($files);
}

$doc = <<<DOC
    Generate diff

    Usage:
      gendiff (-h|--help)
      gendiff (-v|--version)
      gendiff [--format <fmt>] <firstFile> <secondFile>

    Options:
      -h --help                     Show this screen
      -v --version                  Show version
      --format <fmt>                Report format [default: stylish]

    DOC;

$args = \Docopt::handle($doc, array('version' => '1.0'));

try {
    $diff = genDiff($args['<firstFile>'], $args['<secondFile>'], $args['--format']);
    echo($diff);
    return $diff;
} catch (Exception $ex) {
    echo($ex ->getMessage());
}
